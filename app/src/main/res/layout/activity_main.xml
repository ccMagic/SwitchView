<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ccmagic="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--切换按钮-->
    <io.github.ccmagic.switchview.SwitchView
        android:id="@+id/sw_transfer_use_car"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/car_easy_personal_travel_switch_bg_select"
        android:padding="0.5dp"
        ccmagic:SwitchViewDefaultTextColor="#666666"
        ccmagic:SwitchViewDefaultTextSize="15sp"
        ccmagic:SwitchViewIndexBackground="@drawable/car_easy_personal_travel_switch_bg_select"
        ccmagic:SwitchViewIndexTextColor="#5e9beb"
        ccmagic:SwitchViewIndexTextSize="18sp"
        ccmagic:SwitchViewNormalBackground="@drawable/car_easy_personal_travel_switch_normal" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
